<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/factoryItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/factoryCard">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:padding="5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:id="@+id/cardFactory"
                android:text="TextView" />

                <Switch

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/cardFactory"
                    android:maxHeight="10dp"
                    android:minWidth="100dp"
                    android:switchMinWidth="56dp"
                    android:theme="@style/BrandedSwitch"
                    android:checked="true"
                    />

            </RelativeLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp">

                <TextView
                    android:text="Power Consumption"
                    android:layout_width="0dp"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView24"
                    android:layout_weight="0.5"
                    android:elevation="0dp" />

                <TextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvPowerConsumption"
                    android:textSize="20sp"
                    android:layout_weight="0.5"
                    android:elevation="0dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp">

                <TextView
                    android:text="Temp: "
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:id="@+id/textView19"
                    android:layout_weight="0.5"
                    android:elevation="0dp" />

                <TextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:id="@+id/tvTemp"
                    android:layout_weight="0.5"
                    android:elevation="0dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp">

                <TextView
                    android:text="Humidity: "
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:id="@+id/textView17"
                    android:layout_weight="0.5"
                    android:elevation="0dp" />

                <TextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvHumidity"
                    android:textSize="20sp"
                    android:layout_weight="0.5"
                    android:elevation="0dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/factory1linearDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#425563"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Details"
                    android:textSize="17sp"
                    android:textColor="@color/colorAccent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="2dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:id="@+id/image1"
                        android:layout_alignParentLeft="true"
                        android:padding="25dp"/>
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:padding="25dp"
                        android:id="@+id/image2"
                        android:layout_alignParentRight="true"
                        />
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:padding="25dp"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/image1"
                        android:id="@+id/image3"
                        />
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:padding="25dp"
                        android:id="@+id/image4"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/image2"
                        />
                </RelativeLayout>



            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>

